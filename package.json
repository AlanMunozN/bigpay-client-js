{
  "name": "bigpay-client",
  "version": "0.1.0",
  "description": "JavaScript client for Bigpay",
  "main": "lib/bigpay-client.js",
  "scripts": {
    "build:dist": "webpack",
    "build:lib": "babel --out-dir lib src",
    "build": "npm run build:dist && npm run build:lib",
    "clean": "rm -rf dist && rm -rf lib",
    "lint": "eslint src",
    "lint:test": "eslint test",
    "prepublish": "npm run clean && npm run build",
    "test:watch": "karma start",
    "test": "karma start --single-run"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:bigcommerce-labs/bigpay-client-js.git"
  },
  "author": "BigCommerce",
  "private": true,
  "devDependencies": {
    "babel-cli": "6.14.0",
    "babel-core": "6.14.0",
    "babel-loader": "6.2.5",
    "babel-preset-es2015": "6.14.0",
    "es6-promise": "3.2.1",
    "eslint": "3.4.0",
    "eslint-config-airbnb-base": "7.0.0",
    "eslint-loader": "1.5.0",
    "jasmine-core": "2.5.1",
    "karma": "1.2.0",
    "karma-jasmine": "1.0.2",
    "karma-mocha-reporter": "2.1.0",
    "karma-phantomjs-launcher": "1.0.2",
    "karma-sourcemap-loader": "0.3.7",
    "karma-webpack": "1.8.0",
    "webpack": "1.13.2"
  },
  "dependencies": {
    "object-assign": "4.1.0"
  }
}
